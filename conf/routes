# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                                               controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                                   controllers.Assets.versioned(path="/public", file: Asset)

GET     /web-socket                                     it.drwolf.impaqtsbe.controllers.QueryController.getWebSocket(idToken: String ?= null)

+ nocsrf
GET     /metadatum-values/:corpus/:metadatum            it.drwolf.impaqtsbe.controllers.QueryController.getMetadatumValues(corpus: String, metadatum: String)

POST    /corpus/upload                                  it.drwolf.impaqtsbe.controllers.CorpusController.uploadCorpus(request: Request)
DELETE  /corpus                                         it.drwolf.impaqtsbe.controllers.CorpusController.deleteCorpus(corpusName: String)
POST    /registry/upload                                it.drwolf.impaqtsbe.controllers.CorpusController.uploadRegistry(request: Request)
DELETE  /registry                                       it.drwolf.impaqtsbe.controllers.CorpusController.deleteRegistry(registryName: String)

GET     /widecontext/:corpusName/:pos/:hitlen           it.drwolf.impaqtsbe.controllers.CorpusController.getWideContext(corpusName: String, pos: Long, hitlen: Integer)